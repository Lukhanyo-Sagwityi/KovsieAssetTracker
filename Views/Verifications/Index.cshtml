@model KovsieAssetTracker.Models.ViewModel.VerificationsViewModel

@{
    ViewData["Title"] = "Verifications";
}

<h3>Pending Verifications</h3>
@if (Model.PendingAssets != null && Model.PendingAssets.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Asset</th>
                <th>Tag</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asset in Model.PendingAssets)
            {
                <tr>
                    <td>@asset.Name</td>
                    <td>@asset.TagId</td>
                    <td>@asset.VerificationStatus</td>
                    <td>
                        <form asp-action="Accept" method="post" class="d-inline">
                            <input type="hidden" name="assetId" value="@asset.AssetId" />
                            <button type="submit" class="btn btn-success btn-sm">Accept</button>
                        </form>
                        <form asp-action="Decline" method="post" class="d-inline">
                            <input type="hidden" name="assetId" value="@asset.AssetId" />
                            <button type="submit" class="btn btn-danger btn-sm">Decline</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No pending assets found.</p>
}

<hr />

<h3>Verification Log</h3>
@if (Model.VerificationLog != null && Model.VerificationLog.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Asset ID</th>
                <th>Status</th>
                <th>Comment</th>
                <th>Agent</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model.VerificationLog)
            {
                <tr>
                    <td>@log.AssetId</td>
                    <td>@log.Status</td>
                    <td>@log.Comment</td>
                    <td>@log.AgentName</td>
                    <td>@log.VerifiedDate?.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No verification logs found.</p>
}